<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.crumali.androidcontrolsdemo.MainActivity">

    <TextView
        android:id="@+id/tv_moto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center_horizontal"
        android:text="ANDROID CONTROLS"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_moto"
        android:layout_marginTop="10sp"
        android:text="CheckBox"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_checkbox"
        android:text="Progress Bar"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_radiobutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_progressbar"
        android:text="Radio Button"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_radiobutton"
        android:text="Seek Bar"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_seekbar"
        android:text="Spinner"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_textinputlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_spinner"
        android:text="Text Input Layout"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_togglebutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_textinputlayout"
        android:text="Toogle Button"
        android:textSize="20sp" />

</RelativeLayout>
