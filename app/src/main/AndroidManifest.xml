<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.crumali.androidcontrolsdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".checkbox.CheckBox" />
        <activity android:name=".textinputlayout.TextInputLayout" />
        <activity android:name=".spinner.Spinner" />
        <activity android:name=".tooglebutton.ToogleButton" />
        <activity android:name=".radiobutton.RadioButton" />
        <activity android:name=".seekbar.SeekBar" />
        <activity android:name=".progressbar.ProgressBar" />
    </application>

</manifest>